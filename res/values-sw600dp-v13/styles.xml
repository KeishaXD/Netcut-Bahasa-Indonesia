<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>
    <style name="LightThemeSelector" parent="@android:style/Theme.Light" />
    <style name="MineCustomTabText" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12.0sp</item>
    </style>
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat">
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:imageButtonStyle">@style/imageview</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/holoblue_light</item>
    </style>
    <style name="button" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/on_off_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:text">12sp</item>
    </style>
    <style name="button2" parent="@android:style/Widget.Button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff6ec2ff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="buttonborder" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="imageview" parent="@style/button" />
    <style name="list_item_click_text" parent="@style/Base.Widget.AppCompat.ActionButton" />
    <style name="optiontext" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/selector_transparent_button</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="setting" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/selector_transparent_button</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="status" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_transparent_button</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="title" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_transparent_button</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="username">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
</resources>
