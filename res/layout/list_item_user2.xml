<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip"
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/rootview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/group"
            android:background="#00161414"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10.0">
            <TextView
                android:textSize="22.0sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@id/groupname"
                android:paddingLeft="5.0dip"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengguna jaringan:" />
            <TextView
                android:textSize="22.0sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center_vertical"
                android:id="@id/groupcount"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/item_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10.0">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/summary"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="8.0">
                <EditText
                    android:textSize="20.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff"
                    android:id="@id/name"
                    android:background="#00ffffff"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul"
                    android:hint="Tanpa judul"
                    android:editable="false" />
            </LinearLayout>
            <ImageButton
                android:id="@id/Timer_Off_Setup_img"
                android:background="#00000000"
                android:padding="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/timer_online"
                android:layout_weight="1.0" />
            <ImageButton
                android:id="@id/on_off_image"
                android:background="#00000000"
                android:padding="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/online"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/body"
            android:background="@color/bgd2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="IP:"
                        android:singleLine="true"
                        android:layout_weight="0.2" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textColor="#ffffffff"
                        android:id="@id/ip"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        android:singleLine="true"
                        android:layout_weight="0.53" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="MAC:"
                        android:singleLine="true"
                        android:layout_weight="0.3" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textColor="#ffffffff"
                        android:id="@id/mac"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        android:singleLine="true"
                        android:layout_weight="1.0" />
                    <ImageButton
                        android:id="@id/img_copymac"
                        android:background="#00000000"
                        android:padding="0.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/copy"
                        android:scaleType="fitCenter" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Terlindungi:"
                        android:singleLine="true"
                        android:layout_weight="0.45" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textColor="#ffffffff"
                        android:id="@id/protection"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        android:singleLine="true"
                        android:layout_weight="0.25" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Serangan:"
                        android:singleLine="true"
                        android:layout_weight="0.5" />
                    <TextView
                        android:textSize="12.0sp"
                        android:typeface="sans"
                        android:textColor="#ffffffff"
                        android:id="@id/attack"
                        android:padding="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        android:singleLine="true"
                        android:layout_weight="0.3" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/Timer_off_view"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="12.0sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:gravity="right"
                            android:padding="10.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="Pewaktu:"
                            android:singleLine="true"
                            android:layout_weight="1.0" />
                        <EditText
                            android:enabled="false"
                            android:textSize="12.0sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:textColorHint="#ffffffff"
                            android:gravity="center|left"
                            android:id="@id/Timer_off_left"
                            android:background="#00ffffff"
                            android:paddingTop="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:hint="-"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@id/pcname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@id/speedcontrol"
            android:background="@color/item_color3"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">
            <ImageButton
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/img_cufOff"
                android:background="#00000000"
                android:layout_width="0.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/offline"
                android:layout_weight="0.1" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">
                <SeekBar
                    android:layout_gravity="center"
                    android:id="@id/seekbar_speed_limit"
                    android:layout_width="fill_parent"
                    android:layout_height="20.0dip"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:thumb="@drawable/seekbar_new" />
                <TextView
                    android:textSize="8.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:gravity="center|top"
                    android:id="@id/seekbar_status"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="Kecepatan saat ini: 100%" />
            </LinearLayout>
            <ImageButton
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/img_fullacces"
                android:background="#00000000"
                android:layout_width="0.0dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/online"
                android:layout_weight="0.1" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/item_bottom"
            android:layout_width="fill_parent"
            android:layout_height="25.0dip">
            <TextView
                android:textSize="12.0sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:paddingLeft="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merek:" />
            <EditText
                android:enabled="false"
                android:textSize="12.0sp"
                android:typeface="sans"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:gravity="center|left"
                android:id="@id/brand"
                android:background="#00000000"
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:hint="Tidak diketahui"
                android:layout_weight="1.0" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/protectionimg"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/protect"
                android:contentDescription="Status jika di bawah Perlindungan Netcut DefAkhirier:" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/attackimg"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/google_online" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/brandimg"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/warning" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>