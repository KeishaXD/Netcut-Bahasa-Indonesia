<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="5.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:weightSum="2.0"
            android:layout_weight="1.0"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@id/cufOffimg"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:src="@drawable/offline"
                android:layout_weight="1.0" />
            <TextView
                android:textStyle="bold"
                android:gravity="bottom|center"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:text="@string/dialog_speedlimit_totalcutoff"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:weightSum="2.0"
            android:layout_weight="3.0"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <SeekBar
                android:layout_gravity="center_horizontal"
                android:id="@id/seekbar_speed_limit"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:weightSum="4.0"
                android:layout_weight="1.0"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:gravity="bottom|center"
                    android:id="@id/seekbar_status"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan Pengguna Lain 100%"
                    android:layout_weight="2.0" />
                <ImageView
                    android:gravity="bottom"
                    android:layout_gravity="left"
                    android:id="@id/speedimg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/online"
                    android:layout_weight="2.0"
                    android:layout_alignParentRight="true" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:weightSum="2.0"
            android:layout_weight="1.0"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@id/fullaccessimg"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:src="@drawable/online"
                android:layout_weight="1.0" />
            <TextView
                android:textStyle="bold"
                android:gravity="bottom|center"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:text="@string/dialog_speedlimit_nolimit"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>